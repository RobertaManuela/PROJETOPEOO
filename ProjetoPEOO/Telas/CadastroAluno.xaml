<Window x:Class="Telas.CadastroAluno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telas"
        mc:Ignorable="d"
        Title="CadastroAluno" Height="433" Width="397">
    <Grid>
        <GroupBox Header="Cadastro Aluno" Margin="10,11,10,10">
            <Grid >
                <TextBlock Height="20" Width="100" HorizontalAlignment="Left" 
                  VerticalAlignment="Top" Text="Nome:" Margin="100,17,0,0" />

                <TextBox Name="txtn" Height="20" Width="206" HorizontalAlignment="Left" 
                  VerticalAlignment="Top" Text="" Margin="141,17,0,0" />

                <TextBlock Height="20" Width="100" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Text="Email:" Margin="100,65,0,0"/>

                <TextBox Name="txte" Height="20" Width="206" HorizontalAlignment="Left" 
                  VerticalAlignment="Top" Text="" Margin="141,65,0,0" />

                <TextBlock Height="20" Width="100" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Text="Nascimento:" Margin="10,104,0,0"/>

                <TextBox Name="txtnasci" Height="20" Width="80" HorizontalAlignment="Left" 
                  VerticalAlignment="Top" Text="dd/mm/yyyy" Margin="95,104,0,0" />

                <TextBlock Height="20" Width="100" HorizontalAlignment="Right"
                  VerticalAlignment="Top" Text="Disciplina:" Margin="0,104,71,0"/>

                <TextBox Name="txtdisc" Height="20" Width="100" HorizontalAlignment="Right" 
                 VerticalAlignment="Top" Text="" Margin="0,104,10,0" />

                <TextBlock Height="20" Width="100" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="10,142,0,0" Text="ID:"/>

                <TextBox Name="txtid" Height="20" Width="80" HorizontalAlignment="Right" 
                 VerticalAlignment="Top" Text="" Margin="0,142,182,0" />


                <TextBlock Height="20" Width="100" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="186,142,0,0" Text="Senha:"/>

                <TextBox Name="txts" Height="20" Width="100" HorizontalAlignment="Right" 
                 VerticalAlignment="Top" Text="" Margin="0,142,10,0" />

                <Button Content="Inserir" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="75" Click="InsertClick"/>
                <Button Content="Listar" HorizontalAlignment="Left" Margin="100,180,0,0" VerticalAlignment="Top" Width="75" Click="SelectClick"/>
                <Button Content="Atualizar" HorizontalAlignment="Left" Margin="186,180,0,0" VerticalAlignment="Top" Width="75" Click="UpdateClick"/>
                <Button Content="Excluir" HorizontalAlignment="Left" Margin="275,180,0,0" VerticalAlignment="Top" Width="75" Click="DeleteClick"/>
                <ListBox Name="grid" HorizontalAlignment="Left" Height="130" Margin="10,219,0,0" VerticalAlignment="Top" Width="340" />
                <Image  HorizontalAlignment="Left" Height="89" Margin="10,10,0,0" VerticalAlignment="Top" Width="83"/>

            </Grid>
        </GroupBox>
    </Grid>
</Window>
