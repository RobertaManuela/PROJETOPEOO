<Window x:Class="Telas.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telas"
        mc:Ignorable="d"
        Title="Login" Height="270" Width="290">
    <Grid>
        <GroupBox Header="Login" Margin="10,0,10,10">
            <Grid Margin="10,0,1,0">
                <TextBox Name="txtU" Height="26" Width="210" HorizontalAlignment="Left"
                     VerticalAlignment="Top" Text="Usuário" Margin="10,30,0,0" />
                <TextBox Name="txtS" Height="26" Width="210" HorizontalAlignment="Left"
                     VerticalAlignment="Top" Text="Senha" Margin="10,75,0,0" />
                <Button Height="26" Width="210" Content="Acessar" HorizontalAlignment="Left" 
                           VerticalAlignment="Top" Margin="10,120,0,0" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
